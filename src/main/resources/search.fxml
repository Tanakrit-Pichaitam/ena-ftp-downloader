<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane prefHeight="274.0" prefWidth="834.0" xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.ebi.ena.ftp.gui.SearchController">
    <stylesheets>
        <URL value="@gui.css" />
    </stylesheets>
    <children>
        <HBox fx:id="accessionHBox" alignment="CENTER_LEFT" layoutX="26.0" layoutY="20.0" prefHeight="32.0" prefWidth="600.0" spacing="5">
            <children>
                <Label fx:id="accessionLabel" prefHeight="21.0" prefWidth="100.0" text="Accession:" />
                <TextField fx:id="accession" editable="true" prefHeight="25.0" prefWidth="400.0">
                    <tooltip>
                        <Tooltip text="Type in accession" />
                    </tooltip>
                </TextField>
                <Button fx:id="accessionBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="81.0" text="Search">
                    <tooltip>
                        <Tooltip text="Search for accession and load file list" />
                    </tooltip>
                </Button>
                <ImageView fx:id="accLoadingImg" fitHeight="25" fitWidth="25" visible="false">
                    <image>
                        <Image url="@loading.gif"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="26.0" layoutY="55.0">
            <children>
                <Label prefHeight="22.0" prefWidth="17.0" text="OR" />
            </children>
        </HBox>
        <HBox fx:id="reportHBox" alignment="CENTER_LEFT" layoutX="26.0" layoutY="80.0" prefHeight="32.0" prefWidth="684.0" spacing="5">
            <children>
                <Label fx:id="reportLabel" layoutX="21.0" layoutY="46.0" prefHeight="21.0" prefWidth="100.0" text="Report File:" />
                <TextField fx:id="report" editable="true" prefHeight="25.0" prefWidth="400.0">
                    <tooltip>
                        <Tooltip text="Select file report" />
                    </tooltip>
                </TextField>
                <Button fx:id="reportBtn" mnemonicParsing="false" text="Load Report File" />
                <Label fx:id="helpBtn" mnemonicParsing="false">
                    <graphic>
                        <ImageView fitWidth="25" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="@help.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip
                                text="When generating the file report in the ENA Browser, also select the corresponding bytes and md5 columns for the file types you want." />
                    </tooltip>
                </Label>
                <ImageView fx:id="reportLoadingImg" fitHeight="25" fitWidth="25" visible="false">
                    <image>
                        <Image url="@loading.gif"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="26.0" layoutY="115.0">
            <children>
                <Label prefHeight="23.0" prefWidth="17.0" text="OR"/>
            </children>
        </HBox>
        <HBox fx:id="searchHBox" alignment="CENTER_LEFT" layoutX="26.0" layoutY="140.0" prefHeight="51.0"
              prefWidth="684.0" spacing="5">
            <children>
                <Label fx:id="searchLabel" layoutX="21.0" prefHeight="21.0" prefWidth="100.0" text="Query:"/>
                <TextArea fx:id="query" editable="true" prefHeight="50.0" prefWidth="539.0">
                    <tooltip>
                        <Tooltip text="Enter query string"/>
                    </tooltip>
                </TextArea>
                <Hyperlink fx:id="searchHelpLink">
                    <graphic>
                        <ImageView fitWidth="25" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="@help.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Get help with the query string format."/>
                    </tooltip>
                </Hyperlink>
            </children>
        </HBox>
        <HBox fx:id="searchHBox2" alignment="CENTER_LEFT" layoutX="150.0" layoutY="194.0" prefHeight="32.0"
              prefWidth="684.0" spacing="5">
            <children>
                <RadioButton fx:id="runFilesRadio">
                    <tooltip>
                        <Tooltip text="Get Run files"/>
                    </tooltip>
                    <toggleGroup>
                        <ToggleGroup fx:id="files"/>
                    </toggleGroup>
                </RadioButton>
                <Label fx:id="runFilesLabel" text="Run Files"/>
                <Pane prefHeight="32.0" prefWidth="43.0"/>
                <RadioButton fx:id="analysisFilesRadio" toggleGroup="$files">
                    <tooltip>
                        <Tooltip text="Get Analysis files"/>
                    </tooltip>
                </RadioButton>
                <Label fx:id="analysisFilesLabel" text="Analysis Files"/>
                <Pane prefHeight="32.0" prefWidth="155.0"/>
                <Button fx:id="searchBtn" layoutX="500" mnemonicParsing="false" prefHeight="25.0" prefWidth="99.0"
                        text="Portal Search">
                    <tooltip>
                        <Tooltip text="Perform warehouse search"></Tooltip>
                    </tooltip>
                </Button>
                <ImageView fx:id="searchLoadingImg" fitHeight="25" fitWidth="25" visible="false">
                    <image>
                        <Image url="@loading.gif"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="240.0" prefHeight="32.0" prefWidth="435.0">
            <children>
                <Label fx:id="fileErrorLabel" prefHeight="46.0" prefWidth="435.0"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
